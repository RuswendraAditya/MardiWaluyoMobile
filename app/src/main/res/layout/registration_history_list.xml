<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="12dp"
        card_view:contentPadding="10dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtTanggalHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtKlinikHistory"
                android:layout_below="@+id/txtKlinikHistory"
                android:text="Tgl : 2 Mei 2017" />

            <bethesda.com.bethesdahospitalmobile.main.utility.CircularTextView
                android:id="@+id/txtAntrianHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txtDokterHistory"
                android:layout_alignEnd="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:padding="3dp"
                android:text="11"
                android:textSize="28sp"
                android:textStyle="bold"
                android:typeface="normal" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txtKlinikHistory"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="27dp"
                android:text="No Antrian"
                android:textSize="12sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtKlinikHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Klinik Anak"
                android:textSize="24sp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtNamaPasienHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtTanggalHistory"
                android:layout_below="@+id/txtTanggalHistory"
                android:text="Nama Pasien: Ruswendra" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtDokterHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtNamaPasienHistory"
                android:layout_below="@+id/txtNamaPasienHistory"
                android:text="Dokter : Sapto Priatmo" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

